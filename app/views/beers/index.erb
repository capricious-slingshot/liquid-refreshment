  <h2>Leaderboard</h2>
  <p id="create_new"><a href="/beers/new" class="button">Add a Beer</a></p>

  <% beers.each do |beer| %>
    <article>
      <h4><a href="/beers/<%= beer.slug %>"><%= beer.name %></a></h4>
      <p>added on: <%= beer.created_at %></p>
      <p><%= beer.description %></p>
      <p class="rating">⭐ Raiting: <span><%= overall_rating(beer)%></span></p>
    </article>
  <% end %>
