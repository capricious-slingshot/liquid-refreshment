<article>
  <h4><a href="/beers/<%= beer.id %>/edit"><%= beer.name %></a></h4>
  <p><%= beer.description %></p>
  <div class="rating">
    <p>‚≠ê Rating: <span><%= overall_rating(beer)%></span></p>
  </div>
  <% if review %>
  <br>
  <hr>
  <div>
    <p class="rating">My Raiting: <span><%= review.user_rating %></span></p>
    <p> <span class="rating">Notes:</span> <br><br><%= review.tasting_notes %></p>
  </div>
  <% end %>

  <% if logged_in? %>
  <div>
    <% if owner?(beer) %>
      <p>
        <form action="/beers/<%= beer.id %>/delete" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete" class="button">
        </form>
      </p>
    <% end %>
    <p><a href="/beers/<%= beer.id %>/edit" class="button">edit</a></p>
  </div>
  <% end %>
</article>
